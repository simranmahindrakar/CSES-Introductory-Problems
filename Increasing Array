#include <iostream>
#include <bits/stdc++.h>
using namespace std;
int main()
{
	long long n;
	long long count=0;
	
	cin>>n;
	int arr[n+1];
	for(int i=0; i<n ;i++)
	{
		cin>>arr[i];
	}
	for(int i=1; i<n; i++)
	{
		if((arr[i] == arr[i-1]) || (arr[i] > arr[i-1])) continue;
		
		else {
			while (arr[i]<arr[i-1])
			{
				arr[i]++;
				count++;
			}
			
		}
	}
	cout<<count;
}
No brainer. Literally converted words to code.
